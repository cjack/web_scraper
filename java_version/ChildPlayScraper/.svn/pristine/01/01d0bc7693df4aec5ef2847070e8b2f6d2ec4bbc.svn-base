	private void writeLine(BufferedWriter out, String text) {
		try {
			out.write(text);
			out.newLine();
			out.flush();
		} catch (Exception e) {
			e.printStackTrace();
		}
	}
	
	private void writeSpecs(String doctor, ArrayList<String> specs, BufferedWriter out) {
